{% extends 'base.html.twig' %}

{% block styles %}

.form-control{
    width : 98vw;
}
.post{
    margin-left : 10px;
}

.link-password:link, .link-password:visited{
color: blue;
text-decoration: underline;

}
.link-password:hover{
      color: purple;
text-decoration: underline;  
}
{% endblock %}
{% block body %}
<body background-color : grey>
<form method="post" class="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3" style="float : right">
             {{ app.user.fullname }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal ">Authentification</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    <div style="margin-top : 20px">
    <a class="link-password" href="{{path("forgetPassword")}}">Mot de passe oubli√©</a>
    </div>
    {#

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    #}
    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button style="margin-top : 20px;" class="btn btn-lg btn-primary" type="submit">
        Connection
    </button>
</form>
</body>
{% endblock %}
