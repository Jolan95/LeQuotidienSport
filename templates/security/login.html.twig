{% extends 'base.html.twig' %}

{% block body %}
<main class="ml-5 form-signin">
    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3" >
             {{ app.user.fullname }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% endif %}

        <h1 class="my-4">Authentification</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label class="mt-2" for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        <div class=" my-3">
            <a class="link-password" href="{{path("app_forgot_password_request")}}">Mot de passe oubli√© ?</a>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button  class="btn btn-lg btn-primary" type="submit">
            Connexion
        </button>
    </form>
</main>
{% endblock %}
