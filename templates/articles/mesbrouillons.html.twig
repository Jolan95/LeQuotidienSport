{% extends 'base.html.twig' %}

{% block body %}

<div class="my-articles container-fluid">
	<h1 class="text-center">Mes brouillons</h1>
  	<ul class="nav nav-tabs mt-2 ml-2">
	  	<li class="nav-item">
	  	  	<a class="nav-link" aria-current="page" href="{{path("myarticles")}}">Publiés</a>
	  	</li>
	  	<li class="nav-item mx-2">
	  	  	<a class="nav-link bg-warning active"disabled >Brouillons</a>
	  	</li>
	</ul>
	<div class="row bg-warning pt-5 pb-3">
	</div>
  	{% if posts|length > 0 %}
		<div class="row pt-3 pb-2 bold" >
    	    <div class="col-lg-2 col-6 text-center" > 
    	      Titre
    	    </div>
    	    <div class="col-lg-1 d-none d-lg-block offset-lg-1 text-center">
    	      Catégorie
    	    </div>
    	    <div class="col-lg-2 d-none d-lg-block offset-lg-1 text-center">
    	      Date
    	    </div>
    	    <div class="col-lg-1 col-3 offset-lg-1 text-center">
    	      Editer
    	    </div>
    	    <div class="col-lg-1 col-3  d-flex justify-content-center offset-lg-1 text-center">
    	    Supprimer
    	    </div>
		</div>
	<hr/>    
	{% for post in posts %}
    	<div class="row">
    	    <div class="col-6 col-lg-2  text-center" > 
    	     	<a class="link-article gold" href="{{path("app_article", {id : post.id})}}">{{post.title}}</a>
    	    </div>  
    	    <div class="col-1 offset-1  d-none d-lg-flex full-center">
			 	{{ post.category }}
    	    </div>
    	    <div class="col-2 d-none d-lg-flex offset-1 full-center">
    	    	{{ convertDate(post.createdAt) }}
    	    </div>
    	    <div class="col-3 col-lg-1 offset-lg-1 full-center">
				<a  href="{{path("edit-article", {id : post.id})}}" class="edit">
    	    		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
 					<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
					</svg>
				</a>	
    	    </div>
			<div class="col-lg-1 col-3 offset-lg-1  full-center">
			<button data-id="{{post.id}}" class="button-delete full-center" data-toggle="modal" data-target=".bd-example-modal-sm">
			  	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill red" viewBox="0 0 16 16">	 
        	 		<path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
        	 	</svg>
			</button>
	   		</div>
			<div class="modal fade" id="modal-logout{{post.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
				  	<div class="modal-content">
				  	  	<div class="modal-body">
							<div class="text-center red py-2">
							<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-exclamation-triangle" viewBox="0 0 16 16">
							  	<path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z"/>
							  	<path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z"/>
							</svg>
							</div>
							<p class="text-center">Etes vous sur de vouloir supprimer ce brouillon ?</p>
				  	  	</div>
				  	  	<div class="modal-footer d-flex justify-content-between px-5">
				  	  	  	<button type="button" class="btn btn-secondary close-modal">Annuler</button>
								<a  href="{{path("delete_myarticles", {post : post.id})}}" class="trash">
								<button type="button" class="btn btn-danger " data-dismiss="modal">
								Supprimer
								</button>
       				  		</a>
				  	  	</div>
				  	</div>
				</div>
			</div>	
    	    {# <div class="col-lg-1 col-3 offset-lg-1 full-center">
    	      	<a  href="{{path("delete_myarticles", {post : post.id})}}" class="trash">
				  	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">	 
    	      		<path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
    	      		</svg>
    	      	</a>
    	    </div>   #}
		</div>
    	<hr/>
		{% endfor %}
	{% else %}
	<div class="bold text-center mt-5">Aucun article trouvé</div>
	{% endif  %}
</div>	
{% endblock %}
{% block javascripts %}
<script>
$("document").ready(()=>{
	$('.button-delete').click(function() {
	  console.log(this.getAttribute("data-id"));
	  $('#modal-logout'+this.getAttribute("data-id")).modal('show');
	})

	$(".close-modal").click(function(){
	  $('.modal').modal('hide');
	})
})
</script>
{% endblock %}