{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe.{% endblock %}

{% block body %}
<div class="page-100 full-center py-4" style="background-image : url('{{asset("image/background-race.jpg")}}')">
<div class="px-4 py-3 wrapper-form wrapper-form-xl">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-center mb-3">Réinitialisez votre mot de passe</h1>
    <div class="container">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <p>
                Renseignez votre adresse mail, nous vous enverrons un lien vous permettant de réinitialiser votre mot de passe.
            </p>
        </div>

        <button class="btn btn-primary mb-3">Envoyer l'email</button>
    {{ form_end(requestForm) }}
        </div>
        </div>
        </div>
{% endblock %}
