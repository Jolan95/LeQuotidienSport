        </div>
        <div class="d-flex pr-4 align-items-center">
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                <div>
                    <button type="button"
                       class="btn btn-warning myPopover"
                       data-toggle="popover"
                       data-placement="bottom" title="<div class='text-center h5'>{{app.user.fullname}}</div>
                       <div class='font-weight-lighter px-3 py-2'>({{app.user.email}})</div>
                       <div class='text-center font-weight-light'>{{app.user.posts|length}} articles</div>"
                       data-trigger="focus"
                       data-html="true"
                       data-content="<div class='text-center content-popover'>
                        <a href={{path("app_admin_articles")}}><div class='full-center bg-secondary white'>Gestion des articles</div></a>
                        <a  href={{path('app_admin', {role : 'admin'})}}><div class='full-center bg-secondary white'>Gestion des utilisateurs</div></a>
                        <a  href={{path('app_logout')}}><div class='full-center bg-danger white'>Déconnexion</div></a>
                        </div>">
                        <svg xmlns="http://www.w3.org/2000/svg"  width="1.5rem" height="1.5rem" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                        </svg>   
                    </button>
                </div>
                {% elseif is_granted("ROLE_AUTHOR") %}
                <div>
                    <button type="button"
                       class="btn btn-warning myPopover"
                       data-toggle="popover"
                       data-placement="bottom" title="<div class='text-center h5'>{{app.user.fullname}}</div>
                       <div class='font-weight-lighter px-3 py-2'>({{app.user.email}})</div>
                       <div class='text-center font-weight-light'>{{app.user.posts|length}} article(s)</div>"
                       data-trigger="focus"
                       data-html="true"
                       data-content="<div class='text-center content-popover'>
                        <a href={{path("myarticles")}}><div class='full-center bg-secondary white'>Gestion de mes articles</div></a>
                        <a href='{{path('app_logout')}}'><div class='full-center bg-danger white'>Déconnexion</div></a>
                        </div>">
                        <svg xmlns="http://www.w3.org/2000/svg"  width="1.5rem" height="1.5rem" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                        </svg>   
                    </button>
                </div>
                {% else %}
                 
                <svg xmlns="http://www.w3.org/2000/svg" id='btn-logout' width="30" height="30" fill="currentColor" class="bi bi-power bold red" viewBox="0 0 16 16">
                    <path d="M7.5 1v7h1V1h-1z"/>
                    <path d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812z"/>
                </svg>
                </a>
                {% endif %}
            {% else %}
            <div>
                <a href="{{ path("app_login") }}">Connexion</i></a>
            </div>
            {% endif %}
        </div>
    </div>

    {# Header small #}
    <div class="container-fluid d-sm-none ">
        <nav class="navbar">
            <div >
                <img src="{{ asset('image/LogoSport.png') }}" class="logo-header-mobile" alt="logo">   
            </div>
            <button class="navbar-toggler p-1" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <img src="{{asset('image/menu-burger.png')}}" class="menu-burger" alt="icône menu mobile" >
            </button>

            <div class="collapse navbar-collapse zone_menu_mobile" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                
                    <div class="dropdown ">
                        <div data-toggle="dropdown">
                           <a href="">Sports</a><span>
                        </div>
                        <div class="dropdown-menu pb-4 ">
                           <ul>
                               <li class="nav-item">
                                   <a  href="{{path("app_sport", {sport : 'Football'})}}">Football</a>
                               </li>
                               <li class="nav-item">
                                   <a  href="{{path("app_sport", {sport : 'Basketball'})}}">Basketball</a>
                               </li>
                               <li class="nav-item">
                                   <a  href="{{path("app_sport", {sport : 'Rugby'})}}">Rugby</a>
                               </li>
                               <li class="nav-item">
                                   <a  href="{{path("app_sport", {sport : 'Tennis'})}}">Tennis</a>
                               </li>
                               <li class="nav-item">
                                   <a  href="{{path("app_sport", {sport : 'Cyclisme'})}}">Cyclisme</a>
                               </li>
                               <li class="nav-item">
                                   <a  href="{{path("app_sport", {sport : 'Autres'})}}">Autres</a>
                               </li>
                           </ul>
                       </div>
                    </div>
                    {% if app.user %}
                    {% if is_granted('ROLE_AUTHOR') %}
                    <div class="dropdown">
                        <div>
                            <a href="{{ path("author") }}">
                                Créer un article
                            </a>
                        </div>
                    </div> 
                    <div class="dropdown">
                        <div>
                            <a href="{{ path("myarticles") }}">
                                Mes articles
                            </a>
                        </div>
                    </div> 
                    {% endif %}
                    <div class="dropdown">
                        <div>                          
                            <a href="{{ path("app_profile") }}">Panel d'administration</i></a>                   
                        </div>                        
                    </div>
                    {% else %}
                    <div class="dropdown">
                        <div>  
                            <a href="{{ path("app_signin") }}">Connexion</i></a> 
                        </div>
                    </div>
                    {% endif %}

                
                </ul>
            </div>
        </nav>
    </div>
    <div class="modal" id="modal-logout" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body full-center">
                    <p class=" mt-3">Etes vous sûr de vouloir vous déconnecter ?</p>
                </div>
                <div class="modal-footer  d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" id="close">Annuler</button>
                    <a href="{{path("app_logout")}}"><button type="button" class="btn btn-danger" data-dismiss="modal">Valider</button></a>
                </div>
            </div>
        </div>
    </div>
</header>
