
 <header>
    {# Header Large #}
    <div class="d-none d-sm-flex justify-content-between container-flex" >
        <div class="d-flex justify-content-around align-items-center">
            <div >
                <a href="{{ path("app_sport", {sport : "actualité"})}}"><image class="logo-header-desktop " alt="home" src="{{ asset('image/LogoSport.png') }}"></image></a>
            </div>
            <div class="ml-lg-5">
                <a  class="menu-item ps-5" href="{{ path('app_live') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-circle-fill red" viewBox="0 0 16 16">
                      <circle cx="8" cy="8" r="8"/>
                    </svg>
                <span class="fs-2 white bold">Direct</span>
                </a>
            </div>
        </div>
        <div class="d-flex pr-4 align-items-center">
            {% if app.user %}
                {% if is_granted("ROLE_AUTHOR") %}
                <div class="mr-5">
                    <a href="{{ path("app_author") }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-fill white" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                        </svg>
                    </a>
                </div>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <div>
                    <button type="button"
                       class="btn btn-warning myPopover"
                       data-toggle="popover"
                       data-placement="bottom" title="<div class='text-center h5'>{{app.user.fullname}}</div>
                       <div class='font-weight-lighter px-3 py-2'>({{app.user.email}})</div>
                       <div class='text-center font-weight-light'>{{app.user.posts|length}} articles</div>"
                       data-trigger="focus"
                       data-html="true"
                       data-content="<div class='text-center content-popover'>
                        <a href={{path("app_my_articles")}}><div class='full-center bg-secondary white'>Mes articles</div></a>
                        <a href={{path("app_admin_articles")}}><div class='full-center bg-secondary white'>Gestion des articles</div></a>
                        <a  href={{path('app_admin', {role : 'admin'})}}><div class='full-center bg-secondary white'>Gestion des utilisateurs</div></a>
                        <a  href={{path('app_logout')}}><div class='full-center bg-danger white'>Déconnexion</div></a>
                        </div>">
                        <svg xmlns="http://www.w3.org/2000/svg"  width="1.5rem" height="1.5rem" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                        </svg>   
                    </button>
                </div>
                {% elseif is_granted("ROLE_AUTHOR") %}
                <div>
                    <button type="button"
                       class="btn btn-warning myPopover"
                       data-toggle="popover"
                       data-placement="bottom" title="<div class='text-center h5'>{{app.user.fullname}}</div>
                       <div class='font-weight-lighter px-3 py-2'>({{app.user.email}})</div>
                       <div class='text-center font-weight-light'>{{app.user.posts|length}} article(s)</div>"
                       data-trigger="focus"
                       data-html="true"
                       data-content="<div class='text-center content-popover'>
                        <a href={{path("app_my_articles")}}><div class='full-center bg-secondary white'>Gestion de mes articles</div></a>
                        <a href='{{path('app_logout')}}'><div class='full-center bg-danger white'>Déconnexion</div></a>
                        </div>">
                        <svg xmlns="http://www.w3.org/2000/svg"  width="1.5rem" height="1.5rem" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                        </svg>   
                    </button>
                </div>
                {% else %}
                <a href={{path("app_logout")}}>
                <svg xmlns="http://www.w3.org/2000/svg"  width="30" height="30" fill="currentColor" class="bi bi-power bold red" viewBox="0 0 16 16">
                    <path d="M7.5 1v7h1V1h-1z"/>
                    <path d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812z"/>
                </svg>
                </a>
                {% endif %}
            {% else %}
            <div>
                <a href="{{ path("app_login") }}">Connexion</i></a>
            </div>
            {% endif %}
        </div>
    </div>

    {# Header small #}
    <div class="container-fluid d-sm-none header-small">
        <nav class="navbar p-0">
            <div >
                <a href="{{ path("app_sport", {sport : "actualité"})}}">
                    <img src="{{ asset('image/LogoSport.png') }}" class="logo-header-mobile" alt="logo">    
                </a>   
            </div>
            <button class="navbar-toggler p-1" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <img src="{{asset('image/menu-burger.png')}}" class="menu-burger" alt="icône menu mobile" >
            </button>

            <div class="collapse navbar-collapse zone_menu_mobile" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                
                    <div class="dropdown ">
                        <div data-toggle="dropdown">
                           <a href="">Sports</a><span>
                        </div>
                        <div class="dropdown-menu pb-4 ">
                           <ul>
                               <li class="nav-item">
                                   <a  href={{path("app_sport", {sport : 'football'})}}>Football</a>
                               </li>
                               <li class="nav-item">
                                   <a  href={{path("app_sport", {sport : 'basketball'})}}>Basketball</a>
                               </li>
                               <li class="nav-item">
                                   <a  href={{path("app_sport", {sport : 'rugby'})}}>Rugby</a>
                               </li>
                               <li class="nav-item">
                                   <a  href={{path("app_sport", {sport : 'tennis'})}}>Tennis</a>
                               </li>
                               <li class="nav-item">
                                   <a  href={{path('app_sport', {sport : "cyclisme"})}}>Cyclisme</a>
                               </li>
                               <li class="nav-item">
                                   <a  href={{path("app_sport", {sport : 'autres'})}}>Autres</a>
                               </li>
                           </ul>
                       </div>
                    </div>
                    {% if app.user %}
                    {% if is_granted('ROLE_AUTHOR') %}
                    <div class="dropdown">
                        <div>
                            <a href="{{ path("app_author") }}">
                                Créer un article
                            </a>
                        </div>
                    </div> 
                    <div class="dropdown">
                        <div>
                            <a href="{{ path("app_my_articles") }}">
                                Mes articles
                            </a>
                        </div>
                    </div>
                    {% endif %} 
                    {% if is_granted("ROLE_ADMIN") %}
                    <div class="dropdown">
                        <div>                          
                            <a href={{path("app_admin_articles")}}>Gestion des articles</a>                   
                        </div>                        
                    </div>
                    <div class="dropdown">
                        <div>                          
                            <a  href="{{path('app_admin', {role : 'admin'})}}">Gestion des utilisateurs</a>                   
                        </div>                        
                    </div>
                    {% endif %}
                    <div class="dropdown pb-2">
                        <div>                          
                            <a class="red" href="{{path('app_logout')}}">Déconnexion</a>                   
                        </div>                        
                    </div>
                    {% else %}
                    <div class="dropdown pb-2">
                        <div>  
                            <a href="{{ path("app_signin") }}">Connexion</a> 
                        </div>
                    </div>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </div>
</header>
