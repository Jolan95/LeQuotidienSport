{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/index.css')}}"/>
{% endblock %}
{% block body %}
<div class="pb-5">
    <h1 class="text-center pb-2 pt-3">
        {% if (sport is defined) and (sport != "Autres") %}
        {{sport}}
        {% elseif (sport is defined) and (sport == "Autres") %}
        Autres
        {% else %}
        Actualit√©s
        {% endif %}
    </h1>
    {% for article in articles %}
    <hr/>
    <div class="wrapper-article container">
        <a href="{{path("app_article", {id : article.id})}}">
            <div  class="row align-items-center ">
                <div class="col-12 col-lg-4 img100 px-5 p-lg-0 pt-3 p-lg-0 full-center order-lg-2">
                    <image class="img100 img-article border10" src="{{asset('Upload/'~article.picture)}}">
                </div>
                <div class="col-12 col-lg-8 pl-lg-5 p-4 p-lg-0 text-center text-lg-left order-lg-1">
                    <h2>{{article.title}}</h2>    
                    <p class='py-2'>{{article.description}}</p>
                    <p class="m-0">{{article.author.fullname}}</p>
                </div>
            </div>
        </a>
    </div>
    {% endfor %} 
</div>
{% endblock %}
