{% extends 'base.html.twig' %}

{% block body %}
    <div class="admin-comments container mt-3">
        <h1 class="text-center">Gestion Commentaires </h1>
        <div class="text-center mb-4">(Titre  : {{post.title}})</div>
            {% for message in app.flashes('danger') %}
        <div class="alert alert-danger mb-3" role="alert">
            {{ message }}
        </div>
        {% endfor %}
        {% if post.comments|length > 0 %}
        {% for comment in post.comments %}
            <div class="comment-box px-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="bold">{{comment.author.fullname}}</div>
                        <div class="grey"> {{comment.date|date("G:i d/m/Y ") }}</div> 
                        <p>{{comment.content}}</p>
                    </div>
                    <div>
                        <a href="{{path("delete_comment", {id : comment.id})}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1.4rem" height="1.4rem" fill="currentColor" class="bi bi-trash3-fill red" viewBox="0 0 16 16">
                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                        </svg>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% else %}
        <div class="bold text-center mt-5">Cet article ne contient aucun commentaire ! </div>
        {% endif %}
    </div>	
{% endblock %}