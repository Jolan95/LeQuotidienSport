{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-3 pl-2">Cr√©ez votre compte</h1>

    {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    <div class="form-signin ml-lg-4">
    {{ form_start(form) }}
        
        {{ form_row(form.email, { 'label': 'Votre email' }) }}

        {{ form_row(form.password, { 'label': 'Votre mot de passe' }) }}

        {{ form_row(form.fullname, { 'label': 'Votre nom complet' }) }}
    {{ form_end(form) }}
    </div>
</div>    
{% endblock %}